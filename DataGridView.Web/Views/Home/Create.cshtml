@model DataGridView.Web.Models.CarEditViewModel

@{
    ViewData["Title"] = "Добавить автомобиль";
}

<h2 class="text-center mb-4">Добавить новый автомобиль</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-group mb-3">
                        <label asp-for="CarName" class="form-label"></label>
                        <select asp-for="CarName" asp-items="Html.GetEnumSelectList<DataGridView.Entities.Models.CarType>()" class="form-control">
                            <option value="">Выберите марку</option>
                        </select>
                        <span asp-validation-for="CarName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="GosNumber" class="form-label"></label>
                        <input asp-for="GosNumber" class="form-control" />
                        <span asp-validation-for="GosNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Mileage" class="form-label"></label>
                        <input asp-for="Mileage" class="form-control" />
                        <span asp-validation-for="Mileage" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="FuelVolume" class="form-label"></label>
                        <input asp-for="FuelVolume" class="form-control" type="number" min="1" />
                        <span asp-validation-for="FuelVolume" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="CostPerMinute" class="form-label"></label>
                        <input asp-for="CostPerMinute" class="form-control" type="number" step="0.01" min="0.01" />
                        <span asp-validation-for="CostPerMinute" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="FuelConsumption" class="form-label"></label>
                        <input asp-for="FuelConsumption" class="form-control" type="number" min="1" />
                        <span asp-validation-for="FuelConsumption" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Добавить</button>
                        <span style="margin: 0 8px;"></span>
                        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}